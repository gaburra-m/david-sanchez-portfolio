---
const { lab } = Astro.props
---

<article
  class="hover:bg-slate-900 p-4 border-slate-800 border rounded-md transition-colors shadow-md shadow-slate-900"
>
  <header class="mb-4 pb-4 border-b border-slate-700">
    <div class="flex gap-2 justify-between mb-1 items-start">
      <h3 class="text-xl md:text-2xl font-bold flex-1">
        {lab.puesto}
      </h3>
      <p
        class="flex bg-sky-950 py-2 px-4 rounded-full border-sky-900 border text-xs md:text-sm mb-2"
      >
        {lab.fechaInicio} - {lab.fechaFinal}
      </p>
    </div>
    <div>
      <p class="text-slate-300 text-sm">
        {lab.empresa} - {lab.ubicacion}
      </p>
    </div>
  </header>
  <ul class="pl-4 list-disc">
    {lab.tareas.map((tarea) => <li class="text-sm mb-4">{tarea}</li>)}
  </ul>
</article>
