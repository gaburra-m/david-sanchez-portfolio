---
const { href, arrow, download, down } = Astro.props
---

<a
  download={download}
  href={href}
  class="px-4 py-2 text-center text-white border bg-[#53e9f710] border-cyan-400 hover:text-black hover:bg-cyan-400 transition-colors duration-200 ease-in rounded flex items-center justify-center group"
>
  <slot />
  {
    arrow && (
      <svg
        class="w-3.5 h-3.5 ml-2 translate-x-0 group-hover:translate-x-2 duration-150 ease-in"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"
        />
      </svg>
    )
  }
  {
    down && (
      <svg
        class="w-5 ml-2 translate-x-0 animate-bounce  ease-in"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-6 h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m.75 12l3 3m0 0l3-3m-3 3v-6m-1.5-9H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z"
        />
      </svg>
    )
  }
</a>
